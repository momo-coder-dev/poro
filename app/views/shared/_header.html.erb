<header>
  <nav class="bg-white border-b border-gray-200">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
      <a href="/" class="flex items-center text-xl font-semibold space-x-2">
        <%= image_tag "logo.png", class: "h-8 w-auto", alt: "Tikety Logo" %>
        <span>Tikety</span>
      </a>

      <button class="md:hidden block text-gray-600 focus:outline-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <!-- Hamburger Icon -->
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <div id="navbarNav" class="hidden md:flex space-x-4 items-center">
        <a href="/events" class="text-gray-700 hover:text-blue-600">Events</a>
        <a href="/sell" class="text-gray-700 hover:text-blue-600">Sell Tickets</a>
        <% if user_signed_in? %>
          <%= link_to 'Dashboard', dashboard_root_path, class: "btn-primary" %>
        <% else %>
          <%= link_to 'Login', new_user_session_path, class: "btn-primary" %>
          <%= link_to 'Sign Up', new_user_registration_path, class: "text-gray-700 hover:text-blue-600" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
