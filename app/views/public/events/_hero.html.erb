      <!-- Event Image and Details -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
        <!-- Event Header with Image -->

        <% if @event.cover_image.attached? %>
          <div class="relative h-96">
            <%= image_tag @event.cover_image, class: "w-full h-full object-cover" %>
            <div class="absolute inset-0 bg-black bg-opacity-20 opacity-20"></div>
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <div class="flex items-center space-x-2 mb-2">
                <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800">
                  <%= @event.category.titleize %>
                </span>
                <span class="text-sm"><%= @event.formatted_date %></span>
              </div>
              <h1 class="text-4xl font-bold mb-2"><%= @event.name %></h1>
              <div class="flex items-center text-sm">
                <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <%= @event.venue_name %>
              </div>
            </div>
          </div>
        <% end %>
      </div>