      <!-- @event.account/Organizer Information -->
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4">Event Organizer</h2>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-start space-x-4">
            <div class="h-12 w-12 rounded-full bg-gray-200 flex items-center justify-center">
              <span class="text-xl font-bold text-gray-500">
                <%= @event.account.name.first.upcase %>
              </span>
            </div>
            
            <div class="flex-1 min-w-0">
              <h3 class="text-lg font-semibold text-gray-900 mb-1">
                <%= link_to @event.account.name , account_path(@event.account) %>
              </h3>
              
              <div class="flex items-center text-sm text-gray-500 mb-2">
                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <span>Event Organizer</span>
              </div>

              <% if @event.account.description.present? %>
                <p class="text-sm text-gray-600 mb-3">
                  <%= @event.account.description %>
                </p>
              <% end %>

              <div class="flex flex-wrap gap-4 text-sm text-gray-600">
                <% if @event.account.website.present? %>
                  <a href="<%= @event.account.website %>" target="_blank" rel="noopener" class="flex items-center hover:text-indigo-600">
                    <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                    Website
                  </a>
                <% end %>

                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Member since <%= @event.account.created_at.strftime("%B %Y") %></span>
                </div>
              </div>
            </div>
          </div>
        </div> 
      </div>
