<div class="bg-white">

 <%= render 'account_hero' %>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Left Column - Account Info -->
      <div class="lg:col-span-1">
        <%= render 'account_about' %>
        <%= render 'account_stats' %>
      </div>

      <!-- Right Column - Events Grid -->
      <div class="lg:col-span-3">
        <h2 class="text-2xl font-bold mb-6">Recent Events</h2>
        
        <% if @events.any? %>
          <%= render Blocks::EventsCardComponent.new(events: @events) %>
        <% else %>
          <%= render Blocks::ItemEmptyComponent.new(
            title: "No events found",
            description: "This organizer hasn't published any events yet."
          ) %>
        <% end %>
      </div>
    </div>
  </div>
</div> 