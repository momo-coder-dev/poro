<!-- Account Header with Cover Image -->
<div class="relative h-[400px] ">
<% if @account.cover_image.attached? && false %>
    <%= image_tag @account.cover_image, class: "w-full h-full object-cover" %>
<% else %>
    <!-- Overlay gradient -->
    <div class="w-full h-full bg-gradient-to-r from-gray-500   to-gray-600"></div>
<% end %>


<!-- Account Logo and Basic Info -->
<div class="absolute bottom-0 left-0 right-0 p-6 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-end space-x-5">
        <div class="flex-shrink-0">
        <% if @account.logo.attached? %>
            <%= image_tag @account.logo, class: "h-24 w-24 rounded-lg object-cover border-4 border-white" %>
        <% else %>
            <div class="h-24 w-24 rounded-lg bg-white flex items-center justify-center border-4 border-white">
            <span class="text-4xl font-bold text-gray-700">
                <%= @account.name.first.upcase %>
            </span>
            </div>
        <% end %>
        </div>
        <div class="flex-1 min-w-0 pb-1">
        <h1 class="text-3xl font-bold text-white mb-1">
            <%= @account.name %>
        </h1>
        <div class="flex flex-wrap gap-4 text-sm">
            <div class="flex items-center">
            <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Member since <%= @account.member_since %>
            </div>
            <div class="flex items-center">
            <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <%= pluralize(@account.total_events_count, 'event') %> organized
            </div>
        </div>
        </div>
    </div>
    </div>
</div>
</div>