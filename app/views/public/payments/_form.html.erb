<%= form_with(model: payment, data: { turbo: false }, url: payment_path(token: token), class: "space-y-6") do |f| %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Delivery Method & Buyer Info -->
    <div class="bg-gray-50 p-6 rounded-lg shadow space-y-4">
      <h2 class="text-lg font-bold text-gray-900 border-b border-gray-300 pb-2">Réception des tickets</h2>
      <p class="font-medium">Comment souhaitez-vous recevoir les tickets ?</p>

      <div class="space-y-3">
        <label class="flex items-center gap-3">
          <input type="radio" name="delivery" value="email" checked class="accent-red-500">
          <span class="text-gray-700">Par email</span>
        </label>
        <label class="flex items-center gap-3">
          <input type="radio" name="delivery" value="sms" class="accent-red-500">
          <span class="text-gray-700">Par SMS <span class="text-xs text-gray-500">+125 F CFA</span></span>
        </label>
      </div>

      <!-- Buyer Info -->
        <div class="space-y-4 pt-2">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
            <%= f.text_field :buyer_email,
                  class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500",
                  placeholder: "Votre adresse email", required: true %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Téléphone (facultatif)</label>
            <%= f.text_field :buyer_phone,
                  class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500",
                  placeholder: "Numéro de téléphone" %>
          </div>
        </div>
    </div>

    <!-- Payment Method -->
    <div class="bg-gray-50 p-6 rounded-lg shadow space-y-4 flex flex-col justify-between h-full">
      <div>
        <h2 class="text-lg font-bold text-gray-900 border-b border-gray-300 pb-2">Méthode de paiement</h2>
        <p class="font-medium mb-2">Comment voulez-vous payer ?</p>
        <div class="space-y-3">
          <label class="flex items-center gap-3">
            <%= f.radio_button :payment_method, 'mobile_money', class: 'accent-red-500' %>
            <span class="text-gray-700">Mobile Money</span>
          </label>
        </div>
      </div>

      <!-- Submit Button -->
      <%= f.submit 'PROCÉDER AU PAIEMENT »',
            class: 'bg-red-600 text-white font-semibold px-6 py-3 rounded hover:bg-red-700 w-full mt-6' %>
    </div>
  </div>
<% end %>