<div class="container mx-auto max-w-md">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex flex-col">
      <%= f.label :email, class: "mb-1 text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "mb-1 text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500 mb-1">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, class: "mb-1 text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition duration-200" %>
    </div>
  <% end %>

  <div class="mt-4 text-sm text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
