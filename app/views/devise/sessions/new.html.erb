<div class="container mx-auto max-w-md">

  <h2 class="text-2xl font-bold mb-6 text-gray-800">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
    <div class="flex flex-col">
      <%= f.label :email, class: "mb-1 text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, class: "mb-1 text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center space-x-2">
        <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :remember_me, class: "text-sm text-gray-700" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200" %>
    </div>
  <% end %>

  <div class="mt-4 text-sm text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
