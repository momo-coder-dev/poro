<div class="bg-white shadow-md rounded-lg p-4 mb-6">
  <%= form_with url: events_path, method: :get, class: "space-y-4" do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div>
        <%= f.label :category, "Category", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :category, 
            categories.map { |c| [c.titleize, c] },
            { include_blank: "All Categories" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
      </div>

      <div>
        <%= f.label :venue, "Venue", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :venue,
            venues,
            { include_blank: "All Venues" },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
      </div>

      <div>
        <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :start_date,
            value: params[:start_date],
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700" %>
        <%= f.date_field :end_date,
            value: params[:end_date],
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>
    </div>

    <div class="flex justify-end">
      <%= link_to "Clear", events_path, class: "mr-2 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= f.submit "Apply Filters", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  <% end %>
</div> 